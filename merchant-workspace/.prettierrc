{
  "useTabs": false,
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "none",
  "bracketSameLine": false,
  "parser": "babel",
  "semi": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json-stringify"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
